<h1>{{title}} {{#if nsfw}} [nsfw]{{/if}}</h1>
<div class="previous pull-left">
  {{#link-to 'video' previousVideo}}previous{{/link-to}}
</div>
<div class="next pull-right">
  {{#link-to 'video' nextVideo}}next{{/link-to}}
</div>
<div class='clearfix'>
  <div class='video-container'>
    <iframe id="player" type="text/html" width="640" height="390" {{bind-attr src="youtubeSrc"}} frameborder="0"></iframe>
  </div>
</div>

<div class='clearfix'>
  YouTube ID: {{youtubeId}}
  <br />
  Media URL: <a {{bind-attr href="mediaUrl"}} target='_blank'>{{mediaUrl}}</a>
  <br />
  Source URL: <a {{bind-attr href="sourceUrl"}} target='_blank'>{{sourceUrl}}</a>
  <br />
  {{#if nextVideo}}
    Up next: {{#link-to 'video' nextVideo}}{{nextVideo.title}}{{/link-to}}
  {{/if}}
  <br />
  {{#if previousVideo}}
    Previous: {{#link-to 'video' previousVideo}}{{previousVideo.title}}{{/link-to}}
  {{/if}}
</div>
